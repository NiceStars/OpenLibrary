<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomStrokeTextView">
        <attr name="outlineColor" format="reference|color" /><!--描边颜色-->
        <attr name="outlineStrokeWidth" format="dimension" /><!--描边宽度-->
        <attr name="topcolor" format="reference|color" /><!--渐变初始颜色-->
        <attr name="bottomcolor" format="reference|color" /><!--渐变结束颜色-->
    </declare-styleable>

    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension"/>
        <attr name="btnTextSize" format="dimension"/>
    </declare-styleable>
</resources>